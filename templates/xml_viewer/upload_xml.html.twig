{# templates/xml_viewer/upload_xml.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Загрузка XML{% endblock %}

{% block body %}
    <div class="container">
        <h1>Загрузка XML</h1>
        {% for message in app.flashes('error') %}
            <div class="error">{{ message }}</div>
        {% endfor %}
        <form method="post" enctype="multipart/form-data" action="{{ path('view_xml') }}">
            <div class="form-group">
                <label for="xml_file">XML файл</label>
                <input type="file" id="xml_file" name="xml_file" accept=".xml" required>
            </div>
            <div class="form-group">
                <label for="xsd_path">Путь до XSD-схемы (пока только так :) )</label>
                <input name="xsd_path" id="xsd_path" required placeholder="Путь">
            </div>
            <div class="form-group">
                <button type="submit">Загрузить XML</button>
            </div>
        </form>
    </div>
{% endblock %}
